$(BIN)/split-on-spaces: split-on-spaces.sed
  mkdir -p $(BIN)
  install split-on-spaces.sed $(BIN)/split-on-spaces

$(BIN)/split-in-punctuation: split-in-punctuation.pl
  mkdir -p $(BIN)
  install split-in-punctuation.pl $(BIN)/split-in-punctuation

install: $(BIN)/split-on-spaces $(BIN)/split-in-punctuation